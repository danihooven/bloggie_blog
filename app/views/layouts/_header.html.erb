<!--========  Header Area =========-->
    <header class="header">
        <div class="header-mid-area">
            <div class="container">
                <div class="row align-items-center">
                    <!--Logo-->
                    <div class="col-lg-3 col-md-2 col-5">
                        <div class="logo">
