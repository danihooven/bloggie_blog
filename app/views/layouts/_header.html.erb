                        </div>
                    </div>
                    <!--Advertisement-->
                    <div class="col-lg-6 col-md-6 d-md-block d-none">
                        <div class="header-add-banner text-center">
                           <%= link_to root_path do%>
                                <%= image_tag "banners/header-add-banner.jpg" %>
                                <h6 class="header-add-text">All Food Item
